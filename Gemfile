# A sample Gemfile

source 'https://rubygems.org'

gem 'rails', '3.2.22'
gem 'jquery-rails'

gem 'devise', "~> 1.5"
gem "paperclip", "~> 4.3"
gem 'gravatar_image_tag', '~> 1.2.0'
gem "html_truncator", "~>0.2"


gem 'mysql2' # need to install libmysqlclient-dev

gem "iconv", "~> 1.0.3"

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end