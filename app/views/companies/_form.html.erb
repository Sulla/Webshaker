<% if @company.avatar.present? %>
  <form method="post" action="/companies/<%= @company.id %>/reset_avatar" class="deleteAvatarForm">
    <input type="submit" class="button" value="Remove my avatar"/>
  </form>
<% end %>

<%= form_for @company, :html => { :class => "main_form",:multipart => true } do |f| %>
  <div class="avatar_edit">
    <%= avatar(@company) %>
 		<span>
   		<div class="qq-upload-button">
  			<span class="pictos">P </span>Browse 
  			<input id="company_avatar" type="file" name="company[avatar]" >
  		</div>
  		<span class="uploadImage" id="filename"><span class="pictos">P </span></span>
  	  <p class="note">Upload a photo so other WebShaker members can put a name to a face.<br />
  	  Photos must be at least 200px square and either png or jpeg. You may edit your account here instead.</p>
  	</span>
  </div>
  <hr class="clear"/>
  <p>
    <label>Nom *</label>
    <%= f.text_field :name %>
  </p>
    
  <p>
    <label>Baseline</label>
    <%= f.text_field :baseline %>
  </p>    
    
  <p>
    <label> Street *</label>
    <%= f.text_field :street %>
  </p>
  <p>
    <label> City *</label>
    <%= f.text_field :city %>
  </p>    
  <p>
    <label> Zip code *</label>
    <%= f.text_field :zipcode %>
  </p>    
  <p>
    <label> Email *</label>
    <%= f.text_field :email %>
    <span class="note">If you wish to be contacted from your profile</span>
  </p>    
  <p>
    <label> Phone number</label>
    <%= f.text_field :phone %>
  </p>    
  <p>
    <label> Description</label>
    <%= f.text_area :summary %>
  </p>
 
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>