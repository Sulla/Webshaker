				<%= link_to 'Logout', destroy_user_session_path %><br />
				
				 <ul id="navigation">
				 		  <% if @current_menu == 'posts' %>
			          <li class="open"><a href="/admin/posts" title="">Posts</a></li>
			        <% else %>
			          <li><a href="/admin/posts" title="">Posts</a></li>
			        <% end %>
				      <% if @current_menu == 'users' %>
			          <li class="open"><a href="/admin/users" title="">Users</a></li>
			        <% else %>
			          <li><a href="/admin/users" title="">Users</a></li>
			        <% end %>
				      <% if @current_menu == 'workers' %>
			          <li class="open"><a href="/admin/workers" title="">Requests</a></li>
			        <% else %>
			          <li><a href="/admin/workers" title="">Requests</a></li>
			        <% end %>			        
			       <% if @current_menu == 'companies' %>
			          <li class="open"><a href="/admin/companies" title="">Companies</a></li>
			        <% else %>
			          <li><a href="/admin/companies" title="">Companies</a></li>
			        <% end %>
			        <% if @current_menu == 'schools' %>
 			          <li class="open"><a href="/admin/schools" title="">Schools</a></li>
 			        <% else %>
 			          <li><a href="/admin/schools" title="">Schools</a></li>
 			        <% end %>
			        <% if @current_menu == 'comments' %>
			          <li class="open"><a href="/admin/comments" title="">Comments</a></li>
			        <% else %>
			          <li><a href="/admin/comments" title="">Comments</a></li>
			        <% end %>
			        <% if @current_menu == 'codes' %>
			          <li class="open"><a href="/admin/codes" title="">Codes beta</a></li>
			        <% else %>
			          <li><a href="/admin/codes" title="">Codes beta</a></li>
			        <% end %>
			        <li><a href="/admin/main/mailing" title="">Mailing</a></li>
			       
			    </ul>   
			</div>
			<div id="main-content">
				<h1><%= yield :h1 %></h1>
				
				<div id="breadcrumbs">
				  <p>
				    <a href="/admin">HOME</a>
				    <%= yield :breadcrump %>
				  </p>
				</div>
				<div class="box">
        	<div class="boxHeader">
        	  <%= yield :boxheader %>
        	</div>
        	<div class="boxBody">
            <%= yield %>
        	</div>
        </div>				
				<div id="footer">
					<p>Design by <a href="http://www.noomiastudio.com?ref=malopanel" title="se rendre sur Noomiastudio.com">Noomiastudio</a></p>
