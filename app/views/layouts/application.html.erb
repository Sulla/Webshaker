	<script type="text/javascript">
		$(document).ready(function(){
		  $("div#search form label").inFieldLabels();
		  $("div.filtre label").inFieldLabels();
		  $("div.newsletterBox label").inFieldLabels();
		  $('#tabsTop').tabs();
		});
		
		
	</script>
