	<link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />

	<meta name='robots' content='index,follow' />
</head>

<body>
	<div id="sticky">
		<div id="topNav">
			<div class="center">
				<%= render :partial => 'shared/login' %>
				<%= render :partial => 'shared/submit' %>
			  
			  <% begin %>
				  <p class="topStats"><strong><%= @nb_companies %></strong> companies and <%= User.all.count %> users on WebShaker</p>
				<% rescue %>
				  <p class="topStats"></p>
				<% end %>
				<div class="clear"></div>
			</div><!-- end center -->
		</div><!-- end topNav -->
			
		<header>
			<div class="center">
				
			
				
				<h1 id="logo"><a href="/webshaker"><img class="logo" src="/images/logo.png" alt="WebShaker" /></a></h1>
				
				<div id="mainNav">
					<%= render :partial => 'shared/search' %>
					<%= render :partial => 'shared/menu' %>
				</div>
				<div class="clear"></div>
			</div><!-- end center -->
		</header><!-- end header -->
		<div class="clear"></div>
			<div id="main-content">
				<div class="center">
				  
					<%= yield %>
	        		<%= render :partial => 'shared/analytics' %>
	        		<aside>
	           			<%= yield :sidebar %>
	      			</aside><!-- end sidebar -->
	      			<div class="clear"></div>
	      		</div><!-- end center -->
			</div><!-- end content -->
		<div id="push"></div>
	</div>
	<%= render :partial => 'shared/footer' %>
	
</body>
</html>