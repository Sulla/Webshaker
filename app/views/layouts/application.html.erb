  <%= javascript_include_tag 'jquery.infieldlabel.min' %>
  <%= javascript_include_tag 'mailto' %>
  <%= yield :scripts %>
  
 
	<link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
	<script type="text/javascript">var switchTo5x=true;</script>
