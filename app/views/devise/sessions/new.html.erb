<% content_for :title do %>WebShaker: Sign in !<% end %>
<% content_for :sidebar do %>
<%= render :partial => 'shared/signup' %>	

<% end %>

<div id="mainContent"><%= display_flash %>

	<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html=>{:class=>"main_form"}) do |f| %>
  <p><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p>
  	<%= f.label :password %>
  	<%= f.password_field :password %>
	</p>
  <% if devise_mapping.rememberable? -%>
    <p class="checkboxP"><%= f.check_box :remember_me %> Remember me</p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
<% end %>


</div>



