<% content_for :scripts do %>
  <%= javascript_include_tag('malo_js/schools') %>
<% end %>

<% content_for :h1 do %>
	Schools
<% end %>

<% content_for :breadcrump do %>
	> Schools
<% end %>

<% content_for :boxheader do %>
	<h2>LISTING</h2>
<% end %>

<table cellpadding="0" cellspacing="0" width="100%" class="sortable">				
	<thead>
		<tr>
		  <th>ID</th>
			<th>Name</th>
			<th class="action">Action</th>
		</tr>
	</thead>
	<tbody data-type="schools">
	  <% @schools.each_with_index do |school, index| %>
  		<tr class="<%= index % 2 == 0 ? 'one' : 'two' %>" id="schools_<%= school.id %>">
  		  <td><%= school.id %></td>
  			<td><%= link_to school.name, "/admin/schools/#{school.id}" %></td>
  			<td class="action">
          <a href="#" data-id="<%= school.id %>" class="school_visibility">
    			  <% if school.validated %>
    			    <img src="/images/ico/accept.png"/>
    			  <% else %>
    			    <img src="/images/ico/cross.png"/>
    			  <% end %>
    			</a>
  			</td>
  		</tr>
  	<% end %>		
	</tbody>
</table>