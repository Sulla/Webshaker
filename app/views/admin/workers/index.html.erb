<% content_for :scripts do %>
  <%= javascript_include_tag('malo_js/workers') %>
<% end %>

<% content_for :h1 do %>
	Requests
<% end %>

<% content_for :breadcrump do %>
	> Workers requests
<% end %>

<% content_for :boxheader do %>
	<h2>LISTING</h2>
<% end %>

<table cellpadding="0" cellspacing="0" width="100%" class="sortable">
						
	<thead>
		<tr>
		  <th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Company</th>
			<th>Admin?</th>
			<th>Admin actuel</th>
			<th class="action">Action</th>
		</tr>
	</thead>
	<tbody data-type="workers">
	  <% @workers.each_with_index do |worker, index| %>
  		<tr class="<%= index % 2 == 0 ? 'one' : 'two' %>" id="workers_<%= worker.id %>">
  		  <td><%= worker.user.id %></td>
  			<td><%= link_to worker.user.fullname, "http://vps.webinti.com/webshaker/admin/users/#{worker.user.id}" %></td>
  			<td><%= worker.user.email %></td>
  			<td><%= worker.try(:company).try(:name) %></td>
  			<td><%= worker.admin %></td>
        <td>
          <%= worker.try(:company).try(:admin).try(:user).try(:fullname) %>
        </td>
  			<td class="action">
  			  <a href="#" class="accept" data-id="<%= worker.id %>"><img src="http://vps.webinti.com/webshaker/images/ico/accept.png"/></a>
  			  <a href="#" class="refuse" data-id="<%= worker.id %>"><img src="http://vps.webinti.com/webshaker/images/ico/cross.png"/></a>
  			</td>
  		</tr>
  	<% end %>		
	</tbody>
</table>