
<p <%= field_with_error?(post, :title) %>>
  <label>Interview title <em>*</em></label>
  <input type="text" id="title" name="title" class=" large-input" value="<%= get_post_value(:title, post) %>" />
</p>
<p <%= field_with_error?(post.unsaved_associated_model, :movie_url) %>>
  <label>Vimeo ID</label>
 
  <input type="text" id="movie_url" name="movie_url" value="<%= get_post_value(:movie_url, post.unsaved_associated_model) %>" />
</p>

<p <%= field_with_error?(post, :content) %>>
  <label>Interview description <em>*</em></label>
    
  <textarea cols="70" rows="5" id="content" name="content" class="tinymce"><%= get_post_value(:content, post) %></textarea>
</p>


<input type="hidden" name="post_type_id" value="5"/>
