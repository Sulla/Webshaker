
<p <%= field_with_error?(article, :title) %>>
  <label>News title <em>*</em></label>
  <input type="text" id="title" name="title" class=" large-input" value="<%= get_post_value(:title, article) %>" />
</p>

<p <%= field_with_error?(article, :content) %>>
  <label>News content <em>*</em></label>
    
  <textarea cols="70" rows="5" id="content" name="content" class="tinymce"><%= get_post_value(:content, article) %></textarea>
</p>
<input type="hidden" name="post_type_id" value="1"/>